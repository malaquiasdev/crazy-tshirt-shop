<!DOCTYPE html>
<html>
  <head>
    <title>Kunstee Store</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= nav_bar brand: "Kunstee", brand_link: root_url do %>
      <%= form_tag products_search_path,
          method: :get,
          class: "navbar-form navbar-right" do %>

        <div class="form-group">
          <%= text_field_tag :name, @name, class: "form-control" %>
          <%= button_to "Search", nil, class: "btn btn-default" %>
        </div>

      <% end %>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>

  </body>
</html>
