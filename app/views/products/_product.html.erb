<tr>
    <td><%= product.name %></td>
    <td><%= product.desc %></td>
    <td><%= product.price %></td>
    <td><%= button_to "Delete",
            product,
            method: :delete,
            class: "btn btn-danger",
            data: { confirm: "Are you sure you want to delete
                #{product.name} ?"}
        %>
    </td>
    <td><%= link_to "Edit", edit_product_path(product), class: "btn btn-default" %></td>

</tr>
